<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>TemplateServlet</servlet-name>
        <servlet-class>com.example.ProgettoPennaWeb.TemplateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TemplateServlet</servlet-name>
        <url-pattern>/template-test-servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.example.ProgettoPennaWeb.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello-servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CanaleController</servlet-name>
        <servlet-class>com.example.ProgettoPennaWeb.controller.CanaleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CanaleController</servlet-name>
        <url-pattern>/dettaglio-canale.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FasceOrarieController</servlet-name>
        <servlet-class>com.example.ProgettoPennaWeb.controller.FasceOrarieController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FasceOrarieController</servlet-name>
        <url-pattern>/fasce-orarie</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.example.ProgettoPennaWeb.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>com.example.ProgettoPennaWeb.Welcome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/Welcome</url-pattern>
    </servlet-mapping>


</web-app>